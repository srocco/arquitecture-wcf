<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- #ifdef _xml_preprocess -->
    <!--
    -->
    <!-- #else -->
    <add key="Testing_UseIisExpress" value="True" />
    <add key="Testing_HostSite" value="WcfService1" />
    <add key="Testing_HostSiteApplicationPool" value="Clr4IntegratedAppPool" />
    <add key="Testing_SlnRoot" value="C:\VSProjects\HelloWorldAuth" />
    <add key="Testing_BaseUrl" value="https://localhost:44300/" />
    <!-- #endif -->
  </appSettings>

  <system.net>
    <!--Used by http client components. If enabled=true, the first connection might take a few seconds as the client tries to locate proxy.-->
    <defaultProxy enabled="true">
      <proxy bypassonlocal="False" usesystemdefault="True" />
      <bypasslist />
      <module />
    </defaultProxy>

    <connectionManagement>
      <!--For a good value, refer to http://msdn.microsoft.com/en-us/library/system.net.httpwebrequest.aspx-->
      <add address="*" maxconnection="64"/>
    </connectionManagement>
  </system.net>

  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="basicHttpBindingConfig">
          <security mode="TransportWithMessageCredential">
            <message clientCredentialType="UserName" />
          </security>
        </binding>
        <binding name="BasicHttpsBinding_IProductService">
          <security mode="TransportWithMessageCredential" />
        </binding>
        <binding name="BasicHttpBinding_IProductService">
          <security mode="TransportWithMessageCredential" />
        </binding>
      </basicHttpBinding>
    </bindings>
    <client>
     <endpoint address="https://localhost:44301/ProductService.svc"
        binding="basicHttpBinding" bindingConfiguration="basicHttpBindingConfig"
        contract="PoC.Services.Contracts.IProductService" name="DefaultBinding_RealWorld" />
      <endpoint address="https://desktop-ulaj4ka/PoC.Services.Host/ProductService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpsBinding_IProductService"
        contract="htppsService.IProductService" name="BasicHttpsBinding_IProductService" />
      <endpoint address="https://localhost:44301/ProductService.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IProductService"
        contract="HttpServices.IProductService" name="BasicHttpBinding_IProductService" />
    </client>

  </system.serviceModel>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
